<?xml version="1.0" encoding="utf-8"?>
<com.hardosftstudio.countdown.reveal.RevealPatras xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reveal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reveal_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Let's reveal in:"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <com.hardosftstudio.countdown.Patras
            android:id="@+id/counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            app:autoStart="false" />

    </LinearLayout>

</com.hardosftstudio.countdown.reveal.RevealPatras>